        <tr id="row-<%= issue_type.id %>">
          <td class="">
            <%= text_field_tag 'issue_type[][sort]', issue_type.sort, class: 'form-control', pattern: "^[0-9]+$", maxlength: 3 %>
          </td>
          <td class="">
            <%= text_field_tag 'issue_type[][name]', issue_type.name, class: 'form-control', maxlength: 16 %>
          </td>
          <td class="table_th_delete">
            <%= link_to icon('fas', 'minus-circle fa-2x'), "javascript:void(0);", class: 'btn text-danger p-0 bg-transparent delete_row', 
                          data: { confirm: t("prompts.delete_msg"), cancel: t("prompts.cancel"), commit: t("prompts.do") }, title: t("prompts.delete") %>
            <%= hidden_field_tag 'issue_type[][id]', issue_type.id %>
            <%= hidden_field_tag 'issue_type[][deleted]', 0, class: 'issue_type_deleted' %>
          </td>
        </tr>