
<%= form_for issue do |f| %>
  <div class="form-group row" %>
    <%= f.label :product, class: 'col-sm-2 col-form-label' %>
    <% if @product.present? %>
      <div class="col-sm-10">
        <%= text_field_tag :product_name, @product.name, class: 'form-control', disabled: true %>
        <%= f.hidden_field :product_id %>
      </div>
    <% else %>
      <div class="col-sm-10">
        <%= f.collection_select :product_id, Product.all, :id, :name, {}, class: 'form-control' %>
      </div>
    <% end %>
  </div>
  <div class="form-group row" %>
    <%= f.label :product_feature, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :product_feature, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row" %>
    <%= f.label :issue_type, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :issue_type_id, IssueType.all, :id, :name, {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row" %>
    <%= f.label :content, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control', rows: 5, required: true %>
    </div>
  </div>
  <div class="form-group row" %>
    <%= f.label :solution, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :solution, class: 'form-control', rows: 5, required: true %>
    </div>
  </div>
  <div class="form-group row" %>
    <%= f.label :reporter_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :reporter_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row" %>
    <%= f.label :site_name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :site_name, class: 'form-control'%>
    </div>
  </div>
  
  <div class="form-group row" %>
    <%= f.label :responder, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :responder_name, issue.responder.name, class: 'form-control', disabled: true %>
      <%= f.hidden_field :responder_id %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit t("buttons.create"), class: 'btn btn-primary button__middle' %>
      <% if @delete_button %>
        <%= link_to t("buttons.destroy"), @issue, method: :delete, class: 'btn btn-danger button__middle',
                                      data: { confirm: t("prompts.delete_msg") }, title: t("prompts.confirm") %>
      <% end %>
    </div>
  </div>
<% end %>