<% t_user = t("activerecord.attributes.user") %>

<h1><%= t("models.user.new") %></h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name, t_user[:name] %>
    <%= f.text_field :name, class: 'form-control', maxlength: 16  %>
  </div>
  <div class="form-group">
    <%= f.label :mail, t_user[:mail] %>
    <%= f.email_field :mail, class: 'form-control', maxlength: 256 %>
  </div>
  <div class="form-group">
    <%= f.label :password, t_user[:password] %>
    <%= f.password_field :password, class: 'form-control', maxlength: 16 %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, t_user[:password_confirmation] %>
    <%= f.password_field :password_confirmation, class: 'form-control', maxlength: 16 %>
  </div>
  <%= f.submit t("buttons.create"), class: 'btn btn-primary' %>
<% end %>